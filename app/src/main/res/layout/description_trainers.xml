<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNameTrainers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/training_txt_name_1"
            android:textAlignment="center"
            android:textColor="#9C27B0"
            android:textSize="48dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/training_txt_desc"
            android:textAlignment="center"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_trainer_decription_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/training_txt_desc_uvaga_dovilna"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/txt_trainer_decription_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textSize="24dp"
            android:text="@string/training_txt_desc_uvaga_concentration_switch" />

        <TextView
            android:id="@+id/txt_trainer_decription_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:textSize="24dp"
            android:text="@string/training_txt_desc_zorove_sprijnattja" />

        <Button
            android:id="@+id/training_btn_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="24dp"
            android:text="@string/training_btn_start" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>